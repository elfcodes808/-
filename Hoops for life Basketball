local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local UserInputService = game:GetService("UserInputService")

local Window = Rayfield:CreateWindow({
   Name = "ShadowZ",
   LoadingTitle = "Loading ShadowZ Hoops for Life Script",
   LoadingSubtitle = "by Fearz",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "ShadowZ_Config",
      FileName = "ShadowZ_Config"
   },
   Discord = {
      Enabled = true,
      Invite = "V6cpWCYN",
      RememberJoins = true
   },
   KeySystem = false
})

-- Create Tabs
local MainTab = Window:CreateTab("üèÄ Main", 4483362458)
local MiscTab = Window:CreateTab("‚öôÔ∏è Misc", 4483362458)
local CreditTab = Window:CreateTab("üìú Credits", 4483362458)

-- Add Labels
MainTab:CreateLabel("Hoops for Life Script V1.0 - ShadowZ")

-- Variables
local AutoGreenEnabled = false

-- Function to perform Auto Green shot
local function AutoGreen()
    if AutoGreenEnabled then
        -- Start shot animation
        local argsStart = {
            0,
            "Starting",
            "up",
            false,
            0,
            0
        }
        ReplicatedStorage:WaitForChild("Remotes"):WaitForChild("Shoot"):FireServer(unpack(argsStart))

        task.wait(0.15) -- Delay for smooth timing

        -- End shot animation (Perfect Shot)
        local argsEnd = {
            0.9670040998607874,
            "Ending",
            "up",
            false,
            0,
            0
        }
        ReplicatedStorage:WaitForChild("Remotes"):WaitForChild("Shoot"):FireServer(unpack(argsEnd))
    end
end

-- Auto Green Toggle
MainTab:CreateToggle({
    Name = "Auto Green (Perfect Shot)",
    CurrentValue = false,
    Callback = function(Value)
        AutoGreenEnabled = Value
        Rayfield:Notify({
            Title = AutoGreenEnabled and "Auto Green Enabled" or "Auto Green Disabled",
            Content = AutoGreenEnabled and "Press 'E' to take a perfect shot!" or "Manual shooting restored.",
            Duration = 3
        })
    end
})

-- Detect when the player presses "E" and Auto Green is enabled
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.E and AutoGreenEnabled then
        AutoGreen()
    end
end)

-- Credits Tab
CreditTab:CreateLabel("Credit to Fearz for making the script!")

CreditTab:CreateButton({
    Name = "Join Discord",
    Callback = function()
        setclipboard("https://discord.gg/rvXsdjcY")
    end
})

Rayfield:Notify({
    Title = "Script Loaded",
    Content = "ShadowZ Hoops for Life Script V1.0 loaded successfully!",
    Duration = 5,
    Image = 4483362458
})
